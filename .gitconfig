[pull]
	rebase = false
[alias]
    unstage = reset HEAD
    st = status
    ci = commit
    br = branch
    co = checkout
    cob = checkout -b
    df = diff
    dc = diff --cached
    lg = log -p
    lola = log --color --graph --pretty=format:'%C(auto)%h%Creset %C(auto)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --all
    lol = log --graph --decorate --pretty=oneline --abbrev-commit
    l = log --pretty=format:'%h %an %ad %s' --graph
    recent = log --oneline -10
    ls = ls-files
    ign = ls-files -o -i --exclude-standard
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
[color "status"]
    added = yellow
    changed = green
    untracked = cyan
[core]
	editor = vim
